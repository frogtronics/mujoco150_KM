<mujoco model='pendulum'>
    <compiler inertiafromgeom='true' angle='degree'/>

    <default>
		<site type="sphere" size="0.001"/>
        <joint limited='true' damping='0.0001' armature='0' range="-90 90"/>
		<geom contype='1' conaffinity='1' condim='1' rgba='0.8 0.6 0.4 1'
			margin="0.001" solref=".02 1" solimp=".8 .6 .4"/>
    </default>

    <option timestep='0.002' iterations="50" tolerance="1e-10" solver="Newton" jacobian="dense" cone="elliptic" gravity="0 0 -2"/>
	
	<size nstack="1000000"/>
	
	<visual>
		<map fogstart="3" fogend="5" force="0.1" znear="0.01"/>
		<quality shadowsize="2048" offsamples="8"/>
		<global offwidth="800" offheight="800"/>
	</visual>
	
	<asset>
		<texture type="skybox" builtin="gradient" width="128" height="128" rgb1=".4 .6 .8"
		rgb2="0 0 0"/>
		<texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278"
		rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>
		<texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2"
		width="512" height="512"/>
	</asset>

    <worldbody>

        <light mode='targetbodycom' target='link' directional='false' diffuse='.8 .8 .8' specular='0.3 0.3 0.3' pos='0 0 4.0' dir='0 0 -1'/>

		<camera name='targeting' pos='1 1 2' mode='targetbodycom' target='link'/>

		<body name="link" pos="0 0 0.1">
			
			<geom name="link" type="capsule" fromto="0 0 0 0 0 -0.2" size="0.005"/>
		
			<joint name="z" type="hinge" axis="0 1 0"/>
			
			<site name="portalUP" pos="0 0 -0.19"/>
			<site name="portal" pos="0 0 -0.2"/>
			
		</body>

    </worldbody>
	
	
	<sensor>
		<framepos name="portalp" objtype="site" objname="portal"/>
		<framelinvel name="portalv" objtype="site" objname="portal"/>
		<frameangvel name="portalw" objtype="site" objname="portal"/>
	</sensor>

</mujoco>
